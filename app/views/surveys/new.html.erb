<% if @survey.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @survey.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>New Survey:</h1>

<%= form_for [@survey] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <p><%= f.submit %></p>
<% end %>
